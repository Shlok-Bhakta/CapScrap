<%= form_with(model: purchase, class: "contents") do |form| %>
  <% if purchase.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul class="list-disc ml-6">
        <% purchase.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": purchase.errors[:user_id].none?, "border-red-400 focus:outline-red-600": purchase.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :item_id %>
    <%= form.text_field :item_id, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": purchase.errors[:item_id].none?, "border-red-400 focus:outline-red-600": purchase.errors[:item_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :purchase_date %>
    <%= form.date_field :purchase_date, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": purchase.errors[:purchase_date].none?, "border-red-400 focus:outline-red-600": purchase.errors[:purchase_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :purchased_quantity %>
    <%= form.number_field :purchased_quantity, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": purchase.errors[:purchased_quantity].none?, "border-red-400 focus:outline-red-600": purchase.errors[:purchased_quantity].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
