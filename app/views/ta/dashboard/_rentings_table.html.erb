  <div class="border-secondary"></div>
  <div class="text-text"></div>
  <div class="hover:text-text/80"></div>
  <div class="text-center"></div>
  <div class="text-xl"></div>
  <div class="font-bold"></div>
  <div class="pr-8"></div>
  <div class="top-2"></div>
  <div class="right-4"></div>
</div>